{% extends 'base.html.twig' %}

{% block title %}New Article{% endblock %}

{% block body %}

    <h1>Create new Article</h1>


    {{ form_start(form) }}
        <div style="margin-top: 3%;" class="d-flex flex-column align-items-center"> 
            <div style="width: 50%;" class="form-group d-flex flex-column align-items-center">
                <label class="col-form-label" for="inputDefault">Titre</label>
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Votre titre ici...', 'id' : 'inputDefault'}}) }} 
            </div>
            <div style="width: 50%;" class="form-group d-flex flex-column align-items-center">
                <label class="col-form-label" for="inputDefault">Category</label>
                {{ form_widget(form.category) }} 
            </div>
            <div style="width: 50%; margin-top: 3%;" class="form-group d-flex flex-column align-items-center">
            <label for="exampleTextarea">Votre texte ci-dessous</label>
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'id' : 'exampleTextarea', 'rows' : '13'}}) }} 
            </div>
            <div class="form-group d-flex flex-column align-items-center ">
                <button style="color: white;" class="btn bg-success ">{{ button_label|default('Save') }}</button>
                <button class="btn bg-danger" style="color: white;" href="{{ path('app_article_index') }}"> Return  </button>
            </div>
        </div>    
    {{ form_end(form) }}



{% endblock %} 
  